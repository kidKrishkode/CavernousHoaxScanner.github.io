<style>
    .head{
        padding: 3rem 0;
        text-align: center;
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.3);
    }
    .head h1{
        background: linear-gradient(50deg, #2323ff 30%, #ec2c75 50%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: bold;
        letter-spacing: 2px;
        text-transform: uppercase;
    }
    .head p{
        margin-top: 1rem;
    }
    .container{
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
    }
    .section{
        padding: 4rem 0;
        text-align: center;
        transition: 1s ease-in-out;
    }
    .section h2{
        margin-bottom: 1.5rem;
        color: var(--charm);
        text-transform: uppercase;
    }
    .section p{
        max-width: 800px;
        margin: 0 auto;
        color: #aaa;
    }
    .team-members,
    .services{
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        margin-top: 2rem;
    }
    .member,
    .service-item{
        background: linear-gradient(135deg, var(--blend-color), var(--bg-color));
        padding: 2rem;
        border-radius: 10px;
        width: 30%;
        margin-bottom: 2rem;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease;
    }
    .member:hover,
    .service-item:hover{
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
    }
    .member img{
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 3px solid var(--charm);
        object-fit: cover;
    }
    .member h3{
        font-size: 1.6rem;
        margin: 1rem 0 0.5rem;
        color: var(--charm);
    }
    .service-item h3{
        font-size: 1.6rem;
        margin: 1rem 0;
        color: #ff0080;
    }
    .service-item p{
        color: var(--reverse-white);
    }
    .futuristic-border{
        width: 100px;
        height: 5px;
        background: linear-gradient(135deg, var(--charm), #ff0080);
        margin: 1rem auto;
    }
    .about p{
        max-width: 100%;
        padding: 10px 20px;
        text-align: justify;
    }
    @media (max-width: 768px) {
        .team-members,
        .services{
            flex-direction: column;
            align-items: center;
        }
        .member,
        .service-item{
            width: 80%;
        }
    }
    @media (max-width: 480px) {
        head h1{
            font-size: 2rem;
        }
        head p{
            font-size: 1rem;
        }
        .section h2{
            font-size: 2rem;
        }
        .member,
        .service-item{
            width: 100%;
        }
        .section p{
            font-size: 1rem;
        }
    }
</style>

<body>
    <header id="header">
        <%= header %>
