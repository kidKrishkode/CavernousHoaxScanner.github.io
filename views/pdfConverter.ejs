<script src="../public/App.js"></script>
<script src="../public/default.min.js"></script>
<script>
    pageSet.push('header','pdfPage','moreProduct','faq-help','footer');
    appearSet.push(['.htsi',380], ['#moreProduct',580], ['#faq-help', 980]);
    currentPage.push('imgToPdf');
    document.getElementById('header').innerHTML = document.getElementById('header').textContent;
    document.getElementById('footer').innerHTML = document.getElementById('footer').textContent;
    document.getElementById('moreProduct').innerHTML = document.getElementById('moreProduct').textContent;
    document.getElementById('faq-help').innerHTML = document.getElementById('faq-help').textContent;
    document.getElementById('customerFeed').innerHTML = document.getElementById('customerFeed').textContent;
    async function process(){
        if(document.getElementById('media-acc').textContent === 'Accepted' && pdf.imgSet.length!=0){
            let layout = document.getElementById('layout-input').value;
            if(layout == 'Combine mode'){
                layout = "combine";
            }else if(layout == 'Landscap only'){
                layout = "landscap";
            }else if(layout == 'Portrait only'){
                layout = 'portrait';
            }
            let size = document.getElementById('szie-input').value;
            szie = size.replace(' size','');
            document.querySelector('.progress-status').style.display = 'block';
            let progress = document.querySelector('.progress');
            progress.textContent = "Image evaluate start...";
            for(let i=0; i<pdf.imgSet.length; i++){
                progress.textContent = "Image no "+(i+1)+" compressing..";
                pdf.imgSet[i] = await compressBase64Image(pdf.imgSet[i]);
                if(pdf.imgSet.length==i+1){
                    sendToAPI(pdf, layout, size);
                }
            }
            
        }
    }
    function sendToAPI(pdf, layout, size){
        let progress = document.querySelector('.progress');
        const MultiPartsAPI = eval(config.hex.MultiPartsAPI);
        progress.textContent = "All images sending to process..";
        MultiPartsAPI('/load/multiple', pdf.imgSet, getMultiImageLimit(pdf.imgSet)).then((result) => {
            progress.textContent = "Pdf file evaluate start.."
            fetch('/imgToPdf/process', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    paper_size: size,
                    layout: layout,
                    total_no: pdf.imgSet.length,
                    load: 'true'
                })
            }).then(response => response.json()).then(data => {
                afterResponce(data);
            });
        }).catch((error) => {
            console.log("Error sending parts:", error);
        });
    }
    function afterResponce(data){
        if(typeof data.error !== "undefined"){
            return system.handelPyError(data.error);
        }
        document.querySelector('.preview').innerHTML = `<img src='../images/s2.png' alt='loading' id="dimg"/>`;
        document.getElementById('op1').innerHTML = `
            <div class="btn btn-process" onclick="route('');"><i class="fa fa-long-arrow-left"></i> Try some another</div>
            <div class="btn btn-info" onclick="system.download_pdf('${data}','chs_${new Date().getTime()}.pdf');"><i class="fa fa-download"></i> Download</div>
        `;
        system.download_pdf(data, `chs_${new Date().getTime()}.pdf`);
        document.getElementById('op2').style.display = 'none';
        document.getElementById('op3').style.display = 'none';
        document.querySelector('.placeholder').innerHTML = '';
        document.getElementById('file-input').disabled = true;
        document.querySelector('.progress-status').style.display = 'none';
    }
</script>
